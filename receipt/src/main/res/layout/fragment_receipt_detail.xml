<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.ReceiptDetailFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/receipt_detail_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/transaction_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/section_header_height"
                android:background="@drawable/item_view_border_header"
                android:paddingTop="@dimen/grid_padding_top">
                <TextView
                    android:id="@+id/transaction_header_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/grid_margin_left"
                    android:layout_marginTop="@dimen/grid_margin_top"
                    android:text="@string/transaction_header_text"
                    android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/transaction_information"
                android:background="@drawable/item_view_border"
                android:layout_below="@+id/transaction_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_receipt_information_height">

                <include layout="@layout/receipt"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/fee_details_layout"
                android:layout_width="wrap_content"
                android:layout_below="@+id/transaction_information"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fee_details_header"
                    android:layout_width="match_parent"
                    android:background="@drawable/item_view_border_header"
                    android:paddingTop="@dimen/grid_padding_top"
                    android:layout_height="@dimen/section_header_height">
                    <TextView
                        android:id="@+id/details_header_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/details_header_text"
                        android:layout_marginStart="@dimen/grid_margin_left"
                        android:layout_marginTop="@dimen/grid_margin_top"
                        android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fee_details_information"
                    android:background="@drawable/item_view_border"
                    android:layout_below="@+id/fee_details_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/details_amount_label"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_marginTop="@dimen/grid_margin_top"
                              android:text="@string/details_amount_label"
                              android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>

                    <TextView android:id="@+id/details_amount_value"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/grid_margin_top"
                              android:layout_marginEnd="@dimen/grid_margin_right"
                              android:text="@string/text_placeholder"
                              android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>

                    <TextView android:id="@+id/details_fee_label"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_marginTop="8dp"
                              android:text="@string/fee_label"
                              android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toBottomOf="@+id/details_amount_value"/>

                    <TextView android:id="@+id/details_fee_value"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:layout_marginEnd="@dimen/grid_margin_right"
                              android:text="@string/text_placeholder"
                              android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintTop_toBottomOf="@+id/details_amount_value"/>

                    <TextView android:id="@+id/details_transfer_amount_label"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:text="@string/transfer_amount_label"
                              android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toBottomOf="@+id/details_fee_value"/>

                    <TextView android:id="@+id/details_transfer_amount_value"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:layout_marginEnd="@dimen/grid_margin_right"
                              android:layout_marginBottom="@dimen/item_text_top_bottom_margin"
                              android:text="@string/text_placeholder"
                              android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintTop_toBottomOf="@+id/details_fee_value"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/receipt_details_header"
                android:layout_below="@+id/fee_details_layout"
                android:layout_width="match_parent"
                android:background="@drawable/item_view_border_header"
                android:paddingTop="@dimen/grid_padding_top"
                android:layout_height="@dimen/section_header_height">
                <TextView
                    android:id="@+id/receipt_details_header_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/receipt_header_label"
                    android:layout_marginStart="@dimen/grid_margin_left"
                    android:layout_marginTop="@dimen/grid_margin_top"
                    android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/receipt_details_information"
                android:background="@drawable/item_view_border"
                android:layout_below="@+id/receipt_details_header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/receipt_detail_static_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:id="@+id/receipt_id_label"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentStart="true"
                              android:layout_alignParentTop="true"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_marginTop="@dimen/grid_margin_top"
                              android:text="@string/receipt_id_label"
                              android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>

                    <TextView android:id="@+id/receipt_id_value"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentTop="true"
                              android:layout_alignParentEnd="true"
                              android:gravity="end"
                              android:ellipsize="end"
                              android:maxLines="1"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_toEndOf="@+id/receipt_id_label"
                              android:layout_marginTop="@dimen/grid_margin_top"
                              android:layout_marginEnd="@dimen/grid_margin_right"
                              android:layout_marginBottom="0dp"
                              android:text="@string/text_placeholder"
                              android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>

                    <TextView android:id="@+id/date_label"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/receipt_id_label"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:text="@string/receipt_date_label"
                              android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toBottomOf="@+id/receipt_id_value"/>

                    <TextView android:id="@+id/date_value"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/receipt_id_label"
                              android:layout_toEndOf="@+id/date_label"
                              android:layout_alignParentEnd="true"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:gravity="end"
                              android:ellipsize="end"
                              android:maxLines="1"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:layout_marginEnd="@dimen/grid_margin_right"
                              android:text="@string/text_placeholder"
                              android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintTop_toBottomOf="@+id/receipt_id_value"/>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/client_id_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView android:id="@+id/client_id_label"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentStart="true"
                              android:layout_alignParentTop="true"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:text="@string/client_id_label"
                              android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintStart_toStartOf="parent"/>

                    <TextView android:id="@+id/client_id_value"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_alignParentTop="true"
                              android:layout_alignParentEnd="true"
                              android:layout_marginStart="@dimen/item_text_top_bottom_margin"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:layout_marginEnd="@dimen/grid_margin_right"
                              android:layout_toEndOf="@+id/client_id_label"
                              android:ellipsize="end"
                              android:maxLines="1"
                              android:gravity="end"
                              android:text="@string/text_placeholder"
                              android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"/>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/notes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView android:id="@+id/notes_label"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentStart="true"
                              android:layout_alignParentTop="true"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:text="@string/notes_label"
                              android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintStart_toStartOf="parent"/>

                    <TextView android:id="@+id/notes_value"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_alignParentTop="true"
                              android:layout_alignParentEnd="true"
                              android:layout_marginStart="@dimen/item_text_top_bottom_margin"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:layout_marginEnd="@dimen/grid_margin_right"
                              android:layout_toEndOf="@+id/notes_label"
                              android:ellipsize="end"
                              android:maxLines="1"
                              android:gravity="end"
                              android:text="@string/text_placeholder"
                              android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"/>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/charity_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView android:id="@+id/charity_label"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentStart="true"
                              android:layout_alignParentTop="true"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:text="@string/charity_label"
                              android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintStart_toStartOf="parent"/>

                    <TextView android:id="@+id/charity_value"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_alignParentTop="true"
                              android:layout_alignParentEnd="true"
                              android:layout_marginStart="@dimen/item_text_top_bottom_margin"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:layout_marginEnd="@dimen/grid_margin_right"
                              android:layout_toEndOf="@+id/charity_label"
                              android:ellipsize="end"
                              android:maxLines="1"
                              android:gravity="end"
                              android:text="@string/text_placeholder"
                              android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"/>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/check_number_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView android:id="@+id/check_number_label"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentStart="true"
                              android:layout_alignParentTop="true"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:text="@string/check_number_label"
                              android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintStart_toStartOf="parent"/>

                    <TextView android:id="@+id/check_number_value"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_alignParentTop="true"
                              android:layout_alignParentEnd="true"
                              android:layout_marginStart="@dimen/item_text_top_bottom_margin"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:layout_marginEnd="@dimen/grid_margin_right"
                              android:layout_toEndOf="@+id/check_number_label"
                              android:ellipsize="end"
                              android:maxLines="1"
                              android:gravity="end"
                              android:text="@string/text_placeholder"
                              android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/website_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView android:id="@+id/website_label"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentStart="true"
                              android:layout_alignParentTop="true"
                              android:layout_marginStart="@dimen/grid_margin_left"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:text="@string/website_label"
                              android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintStart_toStartOf="parent"/>

                    <TextView android:id="@+id/website_value"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_alignParentTop="true"
                              android:layout_alignParentEnd="true"
                              android:layout_marginStart="@dimen/item_text_top_bottom_margin"
                              android:layout_marginTop="@dimen/item_text_top_bottom_margin"
                              android:layout_marginEnd="@dimen/grid_margin_right"
                              android:layout_toEndOf="@+id/website_label"
                              android:ellipsize="end"
                              android:maxLines="1"
                              android:gravity="end"
                              android:text="@string/text_placeholder"
                              android:textAppearance="@style/TextAppearance.Hyperwallet.Body2"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"/>
                </RelativeLayout>

                <Space android:layout_width="match_parent"
                       android:layout_height="@dimen/grid_margin_bottom"/>

            </LinearLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>